<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền -->
    <solid android:color="@color/white" />

    <!-- Đổ bóng nếu cần -->
    <corners android:radius="12dp" />

    <!-- Viền (nếu cần) -->
    <stroke
        android:width="1dp"
        android:color="@color/light_gray" />

    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
