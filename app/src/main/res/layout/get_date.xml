<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheetlayout"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <!-- Notification Icon and Label -->
        <!-- Back button -->
        <LinearLayout
            android:id="@+id/layoutBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_arrow_back_50"
                android:background="@drawable/btnbg_purple_corner_right"
                android:padding="8dp"
                android:scaleType="centerInside"
                app:tint="@color/white"
                />
        </LinearLayout>

        <!-- Text -->
        <LinearLayout
            android:id="@+id/layoutTextCreNoti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginVertical="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chọn ngày"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
    <!--  Body  -->
    <!--      Item head      -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <!--      Date Picker      -->
        <LinearLayout
            android:id="@+id/layoutGetDate"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_light_purple">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--      Item footer      -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="25dp"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/btnbg_purple"
                android:src="@drawable/ic_check_45"
                app:tint="@color/purple" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>